{
  "private": true,
  "name": "@local/server",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "node -r ts-node/register src/main.ts",
    "dev:inspect": "node --inspect -r ts-node/register src/main.ts",
    "dev:watch": "nodemon --exec node -r ts-node/register src/main.ts",
    "dev:watch-inspect": "nodemon --inspect --exec node -r ts-node/register src/main.ts"
  },
  "dependencies": {
    "@danielwii/asuna-node-server": "workspace:*",
    "@local/shared": "workspace:*"
  },
  "devDependencies": {
    "nodemon": "^2",
    "ts-node": "^10",
    "typescript": "^4"
  }
}
